<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Profiles</title>
</head>
<body>
        <table>
                <tr>
                  <th>No</th>
                  <th>Username</th>
                  <th>Password</th>
                  <% let i = 1 %>
                <% rows.forEach(function(profile){%>
                    <tr>
                      <td> <%= i %> </td>
                      <td> <%= profile.username %> </td>
                      <td> <%= profile.password %> </td>
                      <td> <a href="/profile/edit/<%=profile.id%>">edit</a>
                      <td> <a href="/profile/delete/<%=profile.id%>">delete</a>
                    </tr>
                  <% i++ })%>
                </tr>
              </table>
              <% if (edited === false) {%>
              <form action="/profile" method="post">
                username:<br>
                <input type="text" name="username" >
                <br>
                password:<br>
                <input type="text" name="password" >
                <br>
                <input type="submit" value="ADD"=>
            </form>
              <% } %>
            <% if (edited === true) {%>
            <form action="/profile/edit/<%=rows[0].id%>" method="post">
              username:<br>
              <input type="text" name="username" value="<%=rows[0].username%>">
              <br>
              password:<br>
              <input type="text" name="password" value="<%=rows[0].password%>">
              <br>
              <input type="submit" value="EDIT"=>
            </form>
            <% } %>
</body>
</html>