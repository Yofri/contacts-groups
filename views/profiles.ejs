<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HALAMAN PROFILES</title>

  </head>
      <body style = "background-color : aquamarine">
        <div>
          <table border = "1" style = "padding: 5px 10px; font-family : sans-serif">
            <thead>
              <th><b>Id</b></th>
              <th><b>Username</b></th>
              <th><b>Password</b></th>
            </thead>

            <tbody style = "font-size : 10pt">
            <% for (var i = 0 ; i < rowProfiles.length ; i++) { %>
              <tr>
                  <td><%= rowProfiles[i].id %></td>
                  <td><%= rowProfiles[i].username %></td>
                  <td><%= rowProfiles[i].password %></td>
                  <td><a href = "/profiles/edit/<%= rowProfiles[i].id %>">EDIT</a></td>
                  <td><a href = "/profiles/delete/<%= rowProfiles[i].id %>">DELETE</a></td>
              </tr>
            <%}%>
            </tbody>
          </table>
      </div>

      <div>
        <fieldset>
          <legend><h5>Masukkan Identitas Diri</h5></legend>
          <form action="/profiles" method="post">
          <table border = "0">
            <tr>
              <td width = "200px" style = "font-size : 10pt"><b>Username</b></td> <td width = "10px">:</td> <td><input type= "text" name= "username"></td>
            </tr>

            <tr>
              <td width = "200px" style = "font-size : 10pt"><b>Password</b></td> <td width = "10px">:</td> <td><input type= "text" name= "password"></td>
            </tr>

            <tr>
              <td width = "200px" style = "font-size : 10pt"></td><td></td><td><input type= "submit" value = "Submit"></td>
            </tr>
          </form>
      </fieldset>
      </div>
  </body>
</html>
