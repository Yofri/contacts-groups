
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Groups</title>
  </head>
  <body>

    <h1>Groups</h1>
    <a href="/">Home</a>
    <div class="body">
      <table>
        <form class="" action="/groups" method="post">
          <input type="text" name="name" placeholder="name of group">
          <input type="submit" name="" value="SUBMIT">
        </form>
        <br>
        <br>

        <tr>
          <th>id</th>
          <th>name of group</th>
          <th>contacts involved</th>
        </tr>
        <tbody>
          <%data.forEach( row => { %>
            <tr>
              <td> <%= row.id %> </td>
              <td> <%= row.name_of_group %></td>
              <td>
                <a href="/groups/edit/<%=row.id%>">Edit</a>
                <a href="/groups/delete/<%=row.id%>">Delete</a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
