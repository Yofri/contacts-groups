<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Addresses</title>
  </head>
  <body>
    <table>
      <tr>
        <th>id</th>
        <th>street</th>
        <th>city</th>
        <th>zipcode</th>
      </tr>
      <%for(var i = 0; i < data.length; i++){%>
        <tr>
          <td><%=data[i].id%></td>
          <td><%=data[i].street%></td>
          <td><%=data[i].city%></td>
          <td><%=data[i].zipcode%></td>
          <td><a href="/addresses/edit/<%=data[i].id%>">edit</a></td>
          <td><a href="/addresses/delete/<%=data[i].id%>">delete</a></td>
        </tr>
      <%}%>
    </table>
    <form action="/addresses" method="post">
      <input type="input" name="street" placeholder="street">
      <input type="input" name="city" placeholder="city">
      <input type="input" name="zipcode" placeholder="zipcode">
      <input type="submit" value="submit">
    </form>
  </body>
</html>
